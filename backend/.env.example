# Bot Factory - Environment Variables Example
# Copy this file to .env and fill in your values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_ENV=development

# Database (PostgreSQL - recommended for pgvector support)
# Use docker-compose up to start PostgreSQL with pgvector
DB_NAME=bot_factory_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# To use SQLite instead (pgvector will not work):
# DB_NAME=db.sqlite3
# DB_ENGINE=sqlite3

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Google Gemini API
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Telegram Bot Token (for admin bot)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Admin Telegram IDs (comma-separated)
ADMIN_TELEGRAM_IDS=123456789,987654321

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Origins (for frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
